WindowManager:

<WindowManager>:
    LoadScreen:
        id: loadscreen
    HomeScreen:
        id: homescreen
    JustPayScreen:
        id: justpayscreen
    PotPayScreen:
        id: potpayscreen
    PotPaidScreen:
        id: potpaidscreen
    LoyaltyScreen:
        id: loyaltyscreen
    ScanScreen:
        id:scanscreen
    ShowScreen:
        id:showscreen
    ShowPotsScreen:
        id:showpotsscreen
    ShowNewScreen:
        id:shownewscreen
    SortScreen:
        id:sortscreen
    NewPotScreen:
        id:newpotscreen
    NewLoyaltyScreen:
        id:newloyaltyscreen
<LoadScreen>:
    BoxLayout:
        orientation: 'horizontal'
        MDRaisedButton:
            id: load
            text: 'SignIn'
            size_hint: 0.05, 0.15
            pos_hint: {'center_x': 0.2, 'center_y':0.3}
            on_press:
                root.manager.current = 'home'
                root.manager.ids.homescreen.load_home()
                root.manager.ids.loyaltyscreen.load_loyalty()
        MDRaisedButton:
            id: load
            text: 'SignUp'
            size_hint: 0.05, 0.15
            pos_hint: {'center_x': 0.8, 'center_y':0.3}
            on_press:
                root.manager.current = 'home'
                root.manager.ids.homescreen.load_pots()
<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation:'vertical'
        ScrollView:
            StackLayout:
                id: potlayout
        BoxLayout:
            orientation: 'vertical'
            MDLabel:
                id: amount
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                halign: 'center'
                size_hint: 0.8, 0.1
                font_size: 20
                font_name: "Lcd.ttf"
            BoxLayout:
                orientation: 'horizontal'
                MDRaisedButton:
                    text:"Show"
                    pos_hint: {'center_x': 0.2, 'center_y':0.2}
                    size_hint: 0.15, 0.3
                    on_release:
                        root.manager.current = 'show'
                        root.manager.ids.showscreen.show_table()
                MDRaisedButton:
                    id: justpay
                    text: 'Just Pay'
                    pos_hint: {'center_x': 0.5, 'center_y':0.3}
                    size_hint: 0.15, 0.3
                    halign: 'left'
                    on_press:
                        root.manager.current = 'justpay'
                        root.manager.ids.justpayscreen.ids.sort.text = "Sort("+str(app.unsorted)+")"
                MDRaisedButton:
                    text: 'Get'
                    pos_hint: {'center_x': 0.8, 'center_y':0.3}
                    size_hint: 0.15, 0.3
                    halign: 'right'
                    on_press: root.get_amount()
        BoxLayout:
            orientation:'horizontal'
            MDRaisedButton:
                id: loyalty
                text: 'Loyalty'
                pos_hint: {'center_x': 0.2, 'center_y':0.2}
                size_hint: 0.1, 0.2
                on_press:
                    root.manager.current = 'loyalty'

            MDRaisedButton:
                id: sort
                text: 'Sort(' + str(app.unsorted)+ ')'
                pos_hint: {'center_x': 0.5, 'center_y':0.2}
                size_hint: 0.1, 0.2
                on_press:
                    root.manager.current = 'sort'
                    root.manager.ids.sortscreen.show_table()
            MDRaisedButton:
                id: addpot
                text: 'New Pot'
                pos_hint: {'center_x': 0.8, 'center_y':0.2}
                size_hint: 0.1, 0.2
                on_press:
                    root.manager.current = "showpots"
                    root.manager.ids.showpotsscreen.show_table()
<JustPayScreen>:
    name: 'justpay'
    MDLabel:
        id: amount
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}
        size_hint: 0.8, 0.15
        font_size: 20
        font_name: "Lcd.ttf"
    MDRaisedButton:
        id: paynow
        text: 'Pay Now'
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        size_hint: 0.5, 0.2
        on_press:root.just_pay(self)

    BoxLayout:
        orientation: 'horizontal'
        MDRaisedButton:
            id: sort
            text: 'Sort('+str(app.unsorted)+')'
            pos_hint: {'center_x': 0.8, 'center_y':0.2}
            size_hint: 0.1, 0.2
            on_press: root.manager.current = 'sort'
        MDRaisedButton:
            text: 'Home'
            on_press: root.manager.current = 'home'
            pos_hint: {'center_x': 0.2, 'center_y':0.2}
            size_hint: 0.1, 0.1

<PotPayScreen>:
    name: 'potpay'
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: amount
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            size_hint: 0.8, 0.2
            font_name: "Lcd.ttf"
            valign: 'bottom'
            halign: 'center'
            bold: True
        BoxLayout:
            orientation:'horizontal'
            MDLabel:
                id:potname
                pos_hint: {'center_x': 0.2, 'center_y':0.6}
                size_hint: 0.3, 0.2
                color: (1,0,0,0.5)
                bold: True
                outline_color: (0,1,0,0.5)
                outline_width: 5
                background_color: (0,0,1,0.5)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            MDLabel:
                id:potlimit
                pos_hint: {'center_x': 0.5, 'center_y':0.6}
                size_hint: 0.3, 0.1
            MDLabel:
                id:potrem
                pos_hint: {'center_x': 0.8, 'center_y':0.6}
                size_hint: 0.3, 0.1

        MDRaisedButton:
            id: confirm
            text: 'Confirm'
            pos_hint: {'center_x': 0.5, 'center_y':0.4}
            size_hint: 0.5, 0.1
            halign: 'center'
            on_press:root.confirm_pay(self)
        MDRaisedButton:
            text: 'Cancel'
            pos_hint: {'center_x': 0.2, 'center_y':0.3}
            size_hint: 0.2, 0.1
            halign: 'center'
            on_press:
                root.manager.current = 'home'
                root.manager.ids.homescreen.clear_pots()
        BoxLayout:
            orientation: 'horizontal'
            MDRaisedButton:
                id: sort
                text: 'Sort('+str(app.unsorted)+')'
                on_press: root.manager.current = 'sort'
                pos_hint: {'center_x': 0.2, 'center_y':0.2}
                size_hint: 0.1, 0.1
            MDRaisedButton:
                text: 'Home'
                on_press: root.manager.current = 'home'
                pos_hint: {'center_x': 0.8, 'center_y':0.2}
                size_hint: 0.1, 0.1

<PotPaidScreen>:
    name: 'potpaid'
    BoxLayout:
        orientation:'horizontal'
        MDLabel:
            id:potname
            pos_hint: {'center_x': 0.2, 'center_y':0.6}
            size_hint: 0.3, 0.2
            color: (1,0,0,0.5)
            bold: True
            outline_color: (0,1,0,0.5)
            outline_width: 5
            background_color: (0,0,1,0.5)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        MDLabel:
            id:potlimit
            pos_hint: {'center_x': 0.5, 'center_y':0.6}
            size_hint: 0.3, 0.1
        MDLabel:
            id:potrem
            pos_hint: {'center_x': 0.8, 'center_y':0.6}
            size_hint: 0.3, 0.1
    BoxLayout:
        orientation: 'horizontal'
        MDRaisedButton:
            text: 'Sort('+str(app.unsorted)+')'
            on_press: root.manager.current = 'sort'
            pos_hint: {'center_x': 0.2, 'center_y':0.2}
            size_hint: 0.1, 0.1
        MDRaisedButton:
            text: 'Home'
            on_press: root.manager.current = 'home'
            pos_hint: {'center_x': 0.8, 'center_y':0.2}
            size_hint: 0.1, 0.1

<LoyaltyScreen>:
    name: 'loyalty'
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: 'Select your loyalty card'
            pos_hint: {'center_x': 0.5, 'center_y':0.8}
            size_hint: 0.8, 0.1
        ScrollView:
            StackLayout:
        MDRaisedButton:
            text: "Add a new loyalty card"
            pos_hint: {'center_x': 0.5, 'center_y':0.4}
            size_hint: 0.8, 0.1
            on_press:
                root.manager.current = 'newloyalty'
        BoxLayout:
            orientation: 'horizontal'
            MDRaisedButton:
                text: 'Sort('+str(app.unsorted)+')'
                pos_hint: {'center_x': 0.2, 'center_y':0.2}
                size_hint: 0.1, 0.1
                on_press:
                    root.manager.current = 'sort'
                    root.manager.ids.sortscreen.show_table()
            MDRaisedButton:
                text: 'Home'
                on_press: root.manager.current = 'home'
                pos_hint: {'center_x': 0.8, 'center_y':0.2}
                size_hint: 0.1, 0.1

<ScanScreen>:
    name: 'scan'
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: loyaltyname
            text: ''
            pos_hint: {'center_x': 0.5, 'center_y':0.8}
            size_hint: 0.5, 0.1
        Image:
            id: loyaltybarcode
            text: ''
            pos_hint: {'center_x': 0.5, 'center_y':0.5}
            size_hint: 0.9, 0.3
            halign: 'center'
        MDRaisedButton:
            text: 'Scan'
            pos_hint: {'center_x': 0.5, 'center_y':0.4}
            size_hint: 0.5, 0.1
            halign: 'center'
            on_press:
                root.scan_loyalty()
        MDRaisedButton:
            text: 'Back'
            on_press: root.manager.current = 'loyalty'
            pos_hint: {'center_x': 0.5, 'center_y':0.2}
            size_hint: 0.5, 0.1
            halign: 'center'

<ShowScreen>:
    name: 'show'

<ShowPotsScreen>:
    name: 'showpots'

<ShowNewScreen>:
    name: 'shownew'
    MDRaisedButton:
        text: 'Home'
        on_press: root.manager.current = 'home'
        pos_hint: {'center_x': 0.5, 'center_y':0.5}
        size_hint: 0.1, 0.1

<SortScreen>:
    name: 'sort'

<NewPotScreen>:
    name: 'newpot'
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        MDTextField:
            id: potname
            hint_text: "Enter pot name"
            helper_text: "use a meaningful name"
            helper_text_mode: "on_focus"
            icon_right: "account-card"
            icon_right_color: app.theme_cls.primary_color
            text: "Unknown"
        MDTextField:
            id: potlimit
            hint_text: "Enter pot limit"
            helper_text: "put a number"
            helper_text_mode: "on_focus"
            icon_right: "account-card"
            icon_right_color: app.theme_cls.primary_color
        BoxLayout:
            orientation: 'horizontal'
            MDRaisedButton:
                id:confirm
                text: 'Confirm'
                pos_hint: {'center_x': 0.2, 'center_y':0.3}
                size_hint: 0.1, 0.1
                on_press:
                    root.add_pot(root.ids.potname.text, root.ids.potlimit.text)
                    root.manager.current = 'showpots'
                    root.load_new_pot(root.ids.potname.text)
            MDRaisedButton:
                text: 'Cancel'
                pos_hint: {'center_x': 0.8, 'center_y':0.3}
                size_hint: 0.1, 0.1
                on_press:
                    root.manager.current = 'home'
        MDRaisedButton:
            text: 'Home'
            pos_hint: {'center_x': 0.5, 'center_y':0.2}
            size_hint: 0.1, 0.1
            on_press:
                root.manager.current = 'home'
<NewLoyaltyScreen>:
    name: 'newloyalty'
    BoxLayout:
        orientation: 'vertical'
        MDTextField:
            id: loyaltyname
            hint_text: "Enter loyalty name"
            helper_text: "use a valid name"
            helper_text_mode: "on_focus"
            icon_right: "account-card"
            icon_right_color: app.theme_cls.primary_color
            text: "Unknown"
        MDTextField:
            id: loyaltycode
            hint_text: "Enter the code"
            helper_text: "put a 12 digit number"
            helper_text_mode: "on_focus"
            icon_right: "account-card"
            icon_right_color: app.theme_cls.primary_color
        BoxLayout:
            orientation: 'horizontal'
            MDRaisedButton:
                id:confirm
                text: 'Confirm'
                pos_hint: {'center_x': 0.2, 'center_y':0.3}
                size_hint: 0.1, 0.1
                on_press:
                    root.add_loyalty(root.ids.loyaltyname.text, root.ids.loyaltycode.text)
                    root.manager.current = 'loyalty'
                    root.load_new_loyalty(root.ids.loyaltyname.text)
            MDRaisedButton:
                text: 'Cancel'
                pos_hint: {'center_x': 0.8, 'center_y':0.3}
                size_hint: 0.1, 0.1
                on_press:
                    root.manager.current = 'loyalty'
        MDRaisedButton:
            text: 'Home'
            pos_hint: {'center_x': 0.5, 'center_y':0.2}
            size_hint: 0.1, 0.1
            on_press:
                root.manager.current = 'home'